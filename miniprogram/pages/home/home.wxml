<!--pages/home/home.wxml-->
<view class="topBox">
  <view bind:tap="changeImage" class="headPhoto">
    <image src="{{ image }}" mode="widthFix"/>
  </view>

  <view class="userInfo">
    <view class="status">{{ status }}</view>
    <view wx:if="{{name && status == '医生'}}" class="name">昵称： {{ name }}</view>
    <view wx:if="{{name && status == '教研室'}}" class="name">科室： {{ name }}</view>
  <view wx:if="{{ id }}" class="id">ID：{{ id }}</view>
  </view>
</view>

<view class="homeBox" bind:tap="goToChangePassword">
  修改密码
  <van-icon name="arrow" custom-class="right" />
</view>
<view wx:if="{{ status == '教育教学部' }}" class="homeBox" bind:tap="goToAddStudent">
  添加学生
  <van-icon name="arrow" custom-class="right" />
</view>

<view class="homeBox" bind:tap="goToLogin">
  登录
  <van-icon name="arrow" custom-class="right" />
</view>

<view class="homeBox" bind:tap="ViewPDF">
  查看教学指标文件
  <van-icon name="arrow" custom-class="right" />
</view>

<view wx:if="{{ status == '教育教学部' }}" class="homeBox" bind:tap="chooseExceldoc">
  添加医生（Excel批量导入）
  <van-icon name="arrow" custom-class="right" />
</view>

<view wx:if="{{ status == '教研室' }}" class="homeBox" bind:tap="downloadteachtime">
  导出医生数据
  <van-icon name="arrow" custom-class="right" />
</view>

<view wx:if="{{ status == '教育教学部' }}" class="homeBox" bind:tap="chooseExcelstu">
  添加学生（Excel批量导入）
  <van-icon name="arrow" custom-class="right" />
</view>

/* pages/home/home.wxss */

page {
  background-color: #f1f1f1;
}

.topBox {
  width: 100%;
  height: 500rpx;
  background-color: lightblue;
  border-top: 1px solid lightblue;
  background: url(https://alifei03.cfp.cn/creative/vcg/nowater800/new/VCG211300614411.jpg?x-oss-process=image/format,webp);
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.headPhoto {
  width: 18%;
  margin: 80rpx auto;
}

.headPhoto image {
  width: 140rpx;
  border-radius: 50%;
  box-shadow:
    0 0 10px 10px lightblue,
    /* 底部阴影 */
    0 0 10px 10px lightblue inset,
    /* 顶部阴影 */
    10px 0 10px 10px lightblue,
    /* 右侧阴影 */
    -10px 0 10px 10px lightblue;
  /* 左侧阴影 */
}

.userInfo {
  width: 30%;
  margin: 0rpx auto;
  text-align: center;
}

.status {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.homeBox {
  position: relative;
  font-size: 36rpx;
  height: 130rpx;
  line-height: 130rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding-left: 40rpx;
}

van-icon {
  position: absolute;
  top: 46rpx;
  right: 30rpx;
}

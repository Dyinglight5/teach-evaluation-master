<!--pages/home/changePassword/changePassword.wxml-->
<van-cell-group>
  <van-field class="inputBox" value="{{ originPassword }}" required clearable label="当前密码" placeholder="请输入密码" bind:change="onChangeOriginPassword" />

  <van-field class="inputBox" value="{{ newPassword }}" clearable type="password" label="新密码" placeholder="请输入密码" required bind:change="onChangeNewPassword" />

  <van-field class="inputBox" value="{{ againPassword }}" clearable type="password" label="确认密码" placeholder="请再次输入密码" required bind:change="onChangeAgainPassword" error-message="{{ errMsg }}" />

  <van-button type="primary" size="large" bind:tap="submit">确认修改</van-button>
</van-cell-group>
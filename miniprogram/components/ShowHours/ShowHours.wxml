<!--components/ShowHours/ShowHours.wxml-->
<view class="list">
  <view class="title">
    <view class="title_name">内容</view>
    <view class="title_hour">学时</view>
  </view>

  <view wx:for="{{hours}}" wx:key="id" class="item">
    <view class="name">{{ item.name }}</view>
    <view class="hour">
    <button data-name="{{ title }}" data-index="{{ item.id }}" data-hour="{{ item.hour }}" bind:tap="goToChange">{{ item.hour }}</button>
    </view>
  </view>
</view>

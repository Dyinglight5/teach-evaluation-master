/* components/TotalHours/TotalHours.wxss */

.confirm {
  margin-top: 100rpx;
  width: 98%;
  background-color: #159955;
  color: #fff;
  border-radius: 50rpx;
}

.title-section {
  display: flex;
  align-items: center;
  margin: 10px 0;
}

.picker {
  border: 1px solid #eee;
  padding: 5px 10px;
  border-radius: 4px;
  margin-left: 10px;
  background-color: #fff;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  padding: 0 10px;
}

.button-group .van-button {
  flex: 1;
}

.button-group .van-button:first-child {
  margin-right: 10px;
}

/* 状态显示样式 */
.status-row {
  background-color: #f8f8f8;
  border-radius: 8px;
  margin: 10px 0;
}

.picker {
  min-width: 100px;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
}

.time-info {
  margin: 15px 0;
  display: flex;
  flex-direction: column;
}

.time-info text {
  margin: 5px 0;
}
